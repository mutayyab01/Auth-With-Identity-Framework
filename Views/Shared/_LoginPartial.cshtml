@using AuthWithIdentityFramework.Models.IdentityModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<ul class="navbar nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-muted text-dark"> Hello @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-action="Logout" asp-controller="Account" title="Logout"> <i class="fa-solid fa-right-from-bracket"></i>  </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-action="Login" asp-controller="Account" class="nav-link"> Login </a>
        </li>
        <li class="nav-item">
            <a asp-action="Register" asp-controller="Account" class="nav-link"> Register </a>
        </li>
    }
</ul>