@model ForgetPasswordOrUsernameVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-5 mt-5 border border-4 p-4 rounded">
        <form method="post" asp-action="ResetPassword" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="text-center text-muted mb-2" style="font-size:20px;">Reset Password</h3>
            <hr />
            <div class="mb-3">
                <label class="mb-2" asp-for="Password"></label><span class="text-danger">*</span>
                <input type="password" asp-for="Password" class="form-control" autocomplete="on" placeholder="Please Enter Email" />
                <input type="hidden" asp-for="UserId"/>
                <input type="hidden" asp-for="Token"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="mb-2" asp-for="ConfirmPassword"></label><span class="text-danger">*</span>
                <input type="password" asp-for="ConfirmPassword" class="form-control" autocomplete="on" placeholder="Please Enter Email" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <div class="col-6 d-grid">
                    <a asp-action="Login" asp-controller="Account" class="btn btn-warning btn-block text-light">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
